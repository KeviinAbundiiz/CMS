body
	background-color #f6f6f6
	margin 0px
	font-size 14px

.mtop16
	margin-top 16px

.box
	background-color #fff
	border-radius 8px
	position absolute
	border 1px solid #d6d6d6
	width 500px
	.btn-success
		background-color #E85722
		border 0px
		width 100%
	.form-control
		&:focus
		&:active
			outline none
			box-shadow none
	.inside
		padding 16px
	.header
		padding 0px
		// background-color #E75720
		border-radius 8px 8px 0px 0px
		a
			img
				display block
				margin 0px auto
				width 30%
	.footer
		text-align center
		a
			display inline-block
			font-size .8em
			&:last-child
				margin-left 35px

.box_login
	left calc(50% - 250px)
	top calc(50% - 200px)

.box_register
	left calc(50% - 250px)
	top calc(50% - 300px)
	margin-bottom 16px