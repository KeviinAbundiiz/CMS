body
	align-items center
	background-color #f6f6f6
	display flex
	margin 0px
	justify-content center
	font-size 14px
	min-height 100vh

.mtop16
	margin-top 16px

.box
	margin-top 20px
	margin-bottom 20px
	background-color #fff
	border-radius 8px
	position relative
	border 1px solid #d6d6d6
	width 500px
	.btn-success
		background-color #E85722
		border 0px
		width 100%
	.form-control
		&:focus
		&:active
			outline none
			box-shadow none
	.inside
		padding 16px
	.header
		padding 0px
		// background-color #E75720
		border-radius 8px 8px 0px 0px
		a
			img
				display block
				margin 0px auto
				width 30%
	.footer
		text-align center
		a
			display inline-block
			font-size .8em
			&:last-child
				margin-left 35px


@media only screen and (max-width 728px)
	.box
		width 88%