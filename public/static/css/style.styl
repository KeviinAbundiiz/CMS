color1 = #fb8c00
color2 = #ffbd45
color3 = #c25e00
color4 = #e65100


body
	background-color #f4f4f4
	font-size 14px
	font-family: 'Roboto', sans-serif;


a
.btn
	&:active
	&:focus
		box-shadow none
		outline none

.mtop16
	margin-top 16px

.mtop32
	margin-top 32px

.form-control
	&:hover
	&:focus
		box-shadow none

nav
	background-color #fff
	color #000
	border-bottom 2px solid color1
	.navbar-brand
		img
			width 140px
	.navbar-toggler
		color color4
		&:active
		&:focus
			outline none
			box-shadow none
	.navbar-nav
		li.nav-item
			a.nav-link
				color #000
				border 1px solid #fff
				border-radius 4px
				font-size 0.9em
				font-weight bold
				margin-right 4px
				padding 5px 16px !important
				&:hover
					color color4
			a.btn
				border 1px solid color1
				color #000
				&:hover
					background-color color2
					color #000
			ul.dropdown-menu
				border-radius 0px 0px 4px 4px
				background-color #fff
				border 0px
				top 150% !important
				li
					border-bottom 1px solid #fff
					a
						color #000
						display block
						float none
						width 100%
						i
							color color4
					&:last-child
						border-bottom 0px
					&:hover
						background-color #f7f7f7
		li.link-acc
			overflow hidden
			a
				display inline-block
				float left
				margin-right 0px !important
				&:first-child
					border-radius 4px 0px 0px 4px
					border-right 1px solid #fff
				&:last-child
					border-radius 0px 4px 4px 0px
				img
					position relative
					top -2px
					margin-right 6px
					width 24px
		li.link-user
			overflow initial
			a
				border 0px !important
				img
					border-radius 50%
				&:hover
					background-color transparent !important

.wrapper
	.panel
		background-color #fff
		border-radius 6px
		border-bottom 2px solid color1
		width 100%
		.header
			border-bottom 1px solid #e8e8e8
			h2.title
				display inline-block
				color #19213d
				margin-bottom 0px
				font-size 1.1em
				padding 12px 16px
			ul
				display inline-block
				float right
				margin-right 12px
				li
					display inline-block
					position relative
					a
						display inline-block
						padding 12px
						color #000
						&:hover
							background-color #ffcc80
							color #000
							text-decoration none
						i
							color #e65100
					ul
						display none
						border 1px solid #f0f0f0
						background-color #fff
						position absolute
						right -16px
						float none
						width 200px
						li
							display inline-block
							width 100%
							border-bottom 1px solid #f0f0f0
							&:last-child
								border-bottom 0px
							a
								display block
								width value
					&:hover
						ul
							display block
		.inside
			padding 16px
			.btns
				a
					border 1px solid #000
					color #000 !important
					background-color #ffcc80

			.nav
				.nav-link
					border 1px solid #e65100
					margin-right 10px
					width 48%
					text-align center
					color #e65100
					&:hover
						background-color #ffcc80
						color #000
			.form_search
				display none
				margin-bottom 16px
				.btn
					width 100%
			.big_count
				display block
				text-align center
				font-size 2em
				width 100%
			.edit_avatar
				a
					position relative
					display block
					width 140px
					margin 0px auto
					.overlay
						align-items center
						background-color rgba(0, 0, 0, .55)
						width 100%
						color #fff
						font-size 2em
						display none
						justify-content center
						position absolute
						border-radius 50%
						height 140px
						img
							width 60px
					&:hover
						.overlay
							display flex
				img
					border-radius 50%
					display block
					width 100%
				.form-control
					display none
			.btn-primary
				background-color color4
				border 0px
				padding 8px 32px !important
				&:hover
					background-color color2
					color #000

.home_action_bar
	margin-top 24px
	border-radius 4px
	padding 16px
	background-color #fff
	.categories
		display block
		position relative
		a.link
			background-color #111111
			border-radius 4px
			color #fff
			display block
			text-transform uppercase
			text-decoration none
			padding 12px
			width 100%
			&:hover
				background-color color1 !important
		&:hover
			ul
				display block
		ul
			display none
			list-style none
			margin 0px
			padding 0px
			position absolute
			width 100%
			li
				a
					background-color #f8f8f8
					border-radius 0px
					color #111111
					display block
					padding 12px
					text-transform uppercase
					text-decoration none
					img
						position relative
						margin-top -5px
						margin-right 12px
						width 20px
					&:hover
						background-color color1
						color #fff
	.input-group
		position relative
		i
			position absolute
			font-size 1.4em
			left 12px
			top 12px
			z-index 10
		.form-control
			border-radius 4px 0px 0px 4px
			padding 10px 16px
			padding-left 46px
			z-index 2
			&:focus
				border 1px solid color1
				&::placeholder
					color color1
		&:focus-within
			i
				color color1
			.btn
				background-color color1
				color #fff
		.btn
			background-color #111111
			color #fff
			&:hover
				background-color color1


@media only screen and (max-width 728px)
	nav
		.navbar-nav
			display block !important
			margin-top 16px
			overflow hidden
			li.nav-item
				float left
				display block
				margin-right 0px
				margin-bottom 12px
				width 50%
				a.nav-link
					text-align center
					span
						display block
						font-size 1em
						font-weight normal
						margin-top 4px
						width 100%
					i
						font-size 3em
				&:last-child
					float inline-end
					width 100%
			li.link-acc
				a
					font-size 1.2em
					width 50% !important
					i
						font-size 1em !important
			li.link-user
				border 1px solid #d6d6d6 !important
				border-radius 6px
				padding 8px
				a
					display block
					font-size 1.2em
					width 100% !important
					img
						width 36px
				ul.dropdown-menu
					hr.dropdown-divider
						top 0px !important
						display none
				ul.shadow
					box-shadow none !important


