color1 = #fb8c00
color2 = #ffbd45
color3 = #c25e00
color4 = #e65100


body
	background-color #f9f9f9
	font-size 14px
	font-family: 'Roboto', sans-serif;

a
.btn
	&:active
	&:focus
		box-shadow none
		outline none

nav
	background-color #fff
	color #000
	border-bottom 2px solid color1
	.navbar-brand
		img
			width 140px
	.navbar-nav
		li.nav-item
			a.nav-link
				color #000
				border 1px solid #fff
				border-radius 4px
				font-size 0.9em
				font-weight bold
				margin-right 4px
				padding 5px 16px !important
				&:hover
					color color4
			a.btn
				border 1px solid color1
				color #000
				&:hover
					background-color color2
					color #000
			ul.dropdown-menu
				border-radius 0px 0px 4px 4px
				background-color #fff
				border 0px
				top 150% !important
				li
					border-bottom 1px solid #fff
					a
						color #000
						display block
						float none
						width 100%
						i
							color color4
					&:last-child
						border-bottom 0px
					&:hover
						background-color #f7f7f7
		li.link-acc
			overflow hidden
			a
				display inline-block
				float left
				margin-right 0px !important
				&:first-child
					border-radius 4px 0px 0px 4px
					border-right 1px solid #fff
				&:last-child
					border-radius 0px 4px 4px 0px
				img
					position relative
					top -2px
					margin-right 6px
					width 24px
		li.link-user
			overflow initial
			a
				border 0px !important
				&:hover
					background-color transparent !important

